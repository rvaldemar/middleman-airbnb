


<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>



<!-- Inject flat data in template -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');height: 50vh; background-position: center;">
</div>


<div class="container">
  <div class="row">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle col-xs-10 offset-1 col-s-4 offset-2" %>
    <div class="col-xs-10 offset-1 col-s-4 offset-2">
      <p><%= flat.name %></p>
      <h1><%= flat.description %></h1>
      <p><%= flat.city_name %></p>
    </div>
  </div>
</div>

